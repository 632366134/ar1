.collect_list {
  margin-top: 20rpx;
  width: 720rpx;
}
.collect_list .collect_box {
  width: 99%;
  height: 204rpx;
  margin-bottom: 18rpx;
  box-sizing: border-box;
  background-color: #f7f9fd;
  border-radius: 10rpx;
}
.collect_list .collect_box .border {
  width: 100%;
  height: 204rpx;
  box-sizing: border-box;
  padding: 15rpx;
  padding-right: 29rpx;
  display: flex;
}
.collect_list .collect_box .border image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.collect_list .collect_box .border view {
  margin-top: 12rpx;
  margin-left: 32rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #020202;
  line-height: 48rpx;
}
.collect_list .collect_box2 {
  width: 100%;
  height: 204rpx;
  margin-bottom: 18rpx;
  box-sizing: border-box;
  background-color: transparent;
  border-radius: 10rpx;
}
